<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.landingpage.MainActivity"
    android:background="@color/colorPrimaryDark">

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tmg_toss"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="28dp"
        android:text="@string/caption"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/caption"/>

    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/find"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="37dp"
        android:text="@string/intro"
        android:textAlignment="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"

        android:textSize="18sp"
        android:textColor="@color/intro"/>


    <ImageView
        android:id="@+id/tmg_toss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/intro"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="42dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/logo"
        android:src="@drawable/tossit" />

    <TextView
        android:id="@+id/find"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/google_play"
        android:layout_centerHorizontal="true"
        android:text="@string/find_us_on"
        android:textSize="16sp"
        android:textColor="@color/find"/>


    <Button
        android:id="@+id/google_play"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_above="@+id/app_store"
        android:layout_alignStart="@+id/app_store"
        android:layout_centerHorizontal="true"
        android:background="@drawable/google_play" />

    <Button
        android:id="@+id/app_store"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/appstore" />

</RelativeLayout>
